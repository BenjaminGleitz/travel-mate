{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="table__container">
        <h1>Category</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ category.createdAt ? category.createdAt|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ category.image }}</td>
                </tr>
            </tbody>
        </table>

        <div class="table__button-group">
            <div class="table__edit-group">
                <a class="table__button" href="{{ path('backoffice_category_index') }}">back to list</a>

                <a class="table__button edit-button" href="{{ path('backoffice_category_edit', {'id': category.id}) }}">edit</a>
            </div>
            {{ include('backoffice/category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
