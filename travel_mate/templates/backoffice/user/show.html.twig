{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="table__container">
        <h1>User</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nationality</th>
                    <td>{{ user.nationality }}</td>
                </tr>
                <tr>
                    <th>Bio</th>
                    <td>{{ user.bio }}</td>
                </tr>
            </tbody>
        </table>

        <div class="table__button-group">
            <div class="table__edit-group">
            <a class="table__button" href="{{ path('backoffice_user_index') }}">back to list</a>

            <a class="table__button edit-button" href="{{ path('backoffice_user_edit', {'id': user.id}) }}">edit</a>

            </div>
            {{ include('backoffice/user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
