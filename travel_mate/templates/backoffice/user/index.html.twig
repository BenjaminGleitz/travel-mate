{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="table__container">
        <h1>User index</h1>
        <div class="flash-group">
            <a class="table__button" href="{{ path('backoffice_user_new') }}">Create new</a>
            {% include "partials/_flash.html.twig" %}
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Lastname</th>
                    <th>Firstname</th>
                    <th>Nationality</th>
                    <th>Bio</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.nationality }}</td>
                        <td>{{ user.bio }}</td>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
                        <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d') : '' }}</td>
                        <td>
                            <a class="action-button" href="{{ path('backoffice_user_show', {'id': user.id}) }}">show</a>
                            <a class="action-button" href="{{ path('backoffice_user_edit', {'id': user.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
